<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_col"
    tools:context=".FavouriteDogWalker">

    <TextView
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:text="Favorite Walker"
        android:id="@+id/fav_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/fav_list"
        android:id="@+id/recylcer_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_walker" />



</RelativeLayout>