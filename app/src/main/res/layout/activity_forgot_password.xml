<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_col">

    <TextView
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:textSize="28sp"
        android:textColor="@color/button_col"

        android:text="Unable to Login!!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView

        android:layout_marginLeft="25dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="Fill in your details to get started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <LinearLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/rounded"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:textSize="23sp"
            android:textColor="@color/main_col"

            android:text="Have you forgotten\nyour password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:textSize="15sp"
            android:textColor="@color/main_col"
            android:text="Don't worry, write the below detail\nand we will notify\nregarding your passwrod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_viewcustom"
            android:hint="Username" />


        <Button
            android:textColor="@color/main_col"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Login"
            android:backgroundTint="@color/button_col"
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>