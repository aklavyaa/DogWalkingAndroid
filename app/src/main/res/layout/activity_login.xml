<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_col">

    <TextView

        android:textColorHint="@color/gray"

        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:textSize="28sp"
        android:textColor="@color/button_col"

        android:text="Login!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView

        android:layout_marginLeft="25dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="Fill in your details to get started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <EditText
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/edittext_viewcustom"
        android:hint="Email" />

    <EditText
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:hint="Password"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/edittext_viewcustom"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:text="Have you forgotten your password?"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:backgroundTint="@color/button_col"
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <TextView

        android:textColor="@color/white"
        android:text="I dont have an account. Create an account?"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/createaccount_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>









    <Button
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Login With Google"
        android:backgroundTint="@color/button_col"
        android:id="@+id/loginwithgoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>